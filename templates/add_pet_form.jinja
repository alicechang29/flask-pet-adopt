{% extends 'base.jinja' %}

<!-- add_pet_form.jinja - for testing purposes -->

{% block title %}
<h1>Add Pet</h1>
{% endblock %}

{% block content %}

<form id="pet-add-form" method="POST">
  {{ form.hidden_tag() }} <!--add type=hidden form fields -->

  {% for field in form
         if field.widget.input_type != 'hidden' %}

    <p>
      {{ field.label }}
      {{ field }}

      {% for error in field.errors %}
        {{ error }}
      {% endfor %}
    </p>

  {% endfor %}

  <button type="submit">Submit</button>
</form>

{% endblock %}