{% extends 'base.jinja' %}

<!-- edit_pet_form.jinja - for testing purposes -->

{% block title %}
<h1>Edit Pet</h1>
{% endblock %}

{% block content %}

<div>
    <div>{{ pet.name }}</div>
    <img src="{{ pet.photo_url }}">
    <div>{{ pet.age }}</div>
    <div>{{ pet.species }}</div>
</div>

<form id="pet-edit-form" method="POST">
  {{ form.hidden_tag() }} <!--add type=hidden form fields -->

  {% for field in form
         if field.widget.input_type != 'hidden' %}

    <p>
      {{ field.label }}
      {{ field }}

      {% for error in field.errors %}
        {{ error }}
      {% endfor %}
    </p>

  {% endfor %}

  <button type="submit">Submit</button>
</form>

{% endblock %}